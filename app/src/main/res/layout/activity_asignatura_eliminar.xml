<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:paddingTop="4dip">
    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/codasignatura" />

        <EditText
            android:id="@+id/editCodasignatura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:maxLength="6" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nombreasignatura" />

        <EditText
            android:id="@+id/editNombreasignatura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unidadesval" />

        <EditText
            android:id="@+id/editUnidadesval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1" />

    </TableRow>
    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="eliminarAsignatura"
            android:text="@string/eliminar" />

        <Button
            android:layout_width="wrap_content"
            android:text="@string/limpiarTexto"
            android:onClick="limpiar"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnText2SpeechPlay"
            android:text="@string/escuchar"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>