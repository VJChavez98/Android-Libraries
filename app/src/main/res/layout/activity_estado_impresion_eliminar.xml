<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:paddingTop="4dip"
    >
    <TableRow >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Estado Impresion"/>
        <EditText
            android:id="@+id/editIdEstadoImpresion"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="10"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Solicitud Impresion"/>
        <EditText
            android:id="@+id/editIdSolicitudImpresion"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="10"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Encargado"/>
        <EditText
            android:id="@+id/editIdEncargado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:maxLength="10"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Motivo Impresion"/>
        <EditText
            android:id="@+id/editIdMotivoImpresion"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="10"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:text="Eliminar"
            android:onClick="eliminarEstadoImpresion"/>
        <Button
            android:layout_width="wrap_content"
            android:text="Limpiar"
            android:onClick="limpiar"/>
    </TableRow>
</TableLayout>