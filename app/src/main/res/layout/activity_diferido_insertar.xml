<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    tools:context="sv.edu.ues.eisi.fia.procesosadministrativosfia.Diferido_insertar">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carnet"/>

        <EditText
            android:id="@+id/editCarnet"
            android:layout_width="200dip"
            android:inputType="text"
            android:maxLength="7"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codciclo"/>
            <EditText android:id="@+id/editCodciclo"
                android:inputType="number"
                android:maxLength="5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codAsignatura"/>
        <EditText android:id="@+id/editAsignatura"
            android:inputType="text"
            android:maxLength="6"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GrupoTeorico"/>
        <EditText android:id="@+id/editGrupoTeorico"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grupoDiscusion"/>
        <EditText android:id="@+id/editGrupoDiscusion"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grupoLab"/>
        <EditText android:id="@+id/editGrupoLab"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipoEval"/>
        <Spinner android:id="@+id/spinTipoEval"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </TableRow>
    <TableRow>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/evaluacion"/>
        <EditText android:id="@+id/editCodEva"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:maxLength="2"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechaRealizada"/>
        <EditText android:id="@+id/editFechaRealizada"
            android:inputType="text"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horaRealizada"/>
        <EditText android:id="@+id/editHoraRealizada"
            android:inputType="text"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motivos"/>
        <Spinner android:id="@+id/spinMotivos"
            android:layout_height="wrap_content"
            android:layout_width="250dip"
            android:entries="@array/motivos"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/lblOtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motivosOtro"/>
        <EditText android:id="@+id/editMotivo"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_width="fill_parent"/>
    </TableRow>
    <TableRow>

    </TableRow>
    <LinearLayout android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/justificante" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/rutaSolic"
            android:text="@string/justificante"
            android:visibility="gone"
            android:layout_width="150dip"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/option"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="@string/adjuntarFoto" />
    </LinearLayout>
    <TableRow>
        <Button android:id="@+id/cancelarBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="limpiarTexto"
            android:text="@string/cancelarBtn"/>
        <Button android:id="@+id/ingresarBtn"
        android:text="@string/ingresarBtn"
        android:onClick="insertarDiferido"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

    </TableRow>
    </TableLayout>
</ScrollView>