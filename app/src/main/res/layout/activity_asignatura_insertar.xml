<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">
    <TableRow>

        <TextView
            android:layout_weight="1"
            android:text="@string/codasignatura" />

        <EditText
            android:id="@+id/editCodasignatura"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="6" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_weight="1"
            android:text="@string/nombreasignatura" />

        <EditText
            android:id="@+id/editNombreasignatura"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:maxLength="50" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_weight="1"
            android:text="@string/unidadesval" />

        <EditText
            android:id="@+id/editUnidadesval"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_weight="1"
            android:text="@string/opciones" />
    </TableRow>
    <TableRow>

        <Button
            android:layout_weight="1"
            android:onClick="insertarAsignatura"
            android:text="@string/insertar" />

        <Button
            android:layout_weight="1"
            android:onClick="limpiarTexto"
            android:text="@string/limpiar" />
        <Button
            android:id="@+id/btnText2SpeechPlay"
            android:text="@string/escuchar"/>
    </TableRow>
</TableLayout>