    <TableRow>
        <TextView android:text="@string/codAsignatura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editCodasignatura"
            android:inputType="text"
            android:maxLength="6"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/tipoEval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinTipoEval"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:entries="@array/codTipoEval"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/evaluacion_numero"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editNumeval"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:maxLength="2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <!--<TableRow>
        <TextView android:text="@string/fechaInscripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editFechaInscrip"
            android:inputType="text"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </TableRow>-->
    <TableRow>
        <Button android:id="@+id/cancelarBtn"
            android:onClick="limpiarTexto"
            android:text="@string/cancelarBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button android:id="@+id/botonConsultar"
            android:onClick="consultarDetalle"
            android:text="@string/consultar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnText2SpeechPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escuchar"/>
        <Button
            android:id="@+id/bvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnTalk" />
    </TableRow>
    <FrameLayout android:visibility="visible"
        android:id="@+id/frameConsulta">
        <ListView android:id="@+id/listDetalles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</TableLayout>