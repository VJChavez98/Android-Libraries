<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:stretchColumns="1">


    <TableRow android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/codtiporev"/>

        <Spinner android:id="@+id/spinTipoRev"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:entries="@array/codTipoRevision"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"/>
    </TableRow>

    <TableRow android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/codtipoeval"/>

        <Spinner android:id="@+id/spinTipoEval"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:entries="@array/codTipoEval"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"/>
    </TableRow>

    <TableRow android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/codtipogrupo"/>

        <Spinner android:id="@+id/spinTipoGrupo"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:entries="@array/tipoGrupo"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"/>
    </TableRow>


    <TableRow android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/codasignatura" />
        <EditText
            android:id="@+id/editCodasignatura"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="6"/>
    </TableRow>


    <TableRow android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/evaluacion_numero" />
        <EditText
            android:id="@+id/editNumeval"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="2"/>
    </TableRow>


    <TableRow android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/codciclo" />
        <EditText
            android:id="@+id/editCodciclo"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="5"/>
    </TableRow>



    <TableRow android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/carnet" />
        <EditText
            android:id="@+id/editCarnet"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="7"/>
    </TableRow>


    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="consultarSolicitudRevision"
            android:text="@string/consultar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="limpiarTexto"
            android:text="Limpiar" />
    </TableRow>



    <TableRow android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/idImagen"
            android:layout_marginTop="11dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/idImagen"
            android:layout_marginTop="11dp" />
    </TableRow>




    <TableRow android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/notaAntesRev" />

        <EditText
            android:id="@+id/editNotaActual"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="4"
            android:focusable="false"/>

    </TableRow>


    <TableRow android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/numerogrupo" />

        <EditText
            android:id="@+id/editnumerogrupo"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="2"
            android:focusable="false"/>

    </TableRow>


    <TableRow android:layout_marginBottom="10dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/fechaSolicitud" />
        <EditText
            android:id="@+id/editFechaSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:focusable="false"/>
    </TableRow>

    <TableRow android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/motivorev" />

        <EditText
            android:id="@+id/editmotivorev"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:maxLength="50"
            android:focusable="false"/>

    </TableRow>

</TableLayout>